{
    "manifest_version": 2,
    "name": "BlockURL",
    "version": "1.1.0",
    "description": "Blocks specific pages and URLs with the click of a button",
    "browser_specific_settings": {
        "gecko": {
            "id": "blockurl@beatlink.github.com",
            "strict_min_version": "100.0"
        }
    },
    "icons": {
      "48": "no.png"
    },
    "permissions": [
      "webRequest",
      "webRequestBlocking",
      "storage",
      "unlimitedStorage",
      "tabs",
      "activeTab",
      "menus",
      "<all_urls>"
    ],
    "background": {
        "scripts": ["background.js"]
    },
    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js": ["blocklinks.js"]
    }],
    "browser_action": {
        "default_icon": {
            "48": "no.png"
          }
    },
    "page_action": {
        "default_icon": "no.png",
        "default_title": "Toggle Blocking for this Page",
        "show_matches": ["<all_urls>"]
    },
    "options_ui": {
        "page": "options.html"
    }
}